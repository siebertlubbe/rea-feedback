<% @feedbacks.each do |feedback| %>
   <div class="responseWrap">
     <div class="responseHeader">
       <span class="responseUrl"><%= feedback.url %></span>
       <span class="responseScore <%= feedback.emotion %>" title="<%= feedback.emotion %>">
         <%= feedback.emotion.upcase %>
       </span>
       <span class="responseTrend <%= feedback.trend %>" title="treding <%= feedback.trend %>"><%= feedback.trend %></span>
       <h2 class="responseProduct">Product</h2>
       <div class="clearAll">&nbsp;</div>
     </div>
     <div class="responseText">
       <%= feedback.comment %>
     </div>
     
   </div>
<% end %>

<script type="text/javascript">
  var numberOfFeedbacks = <%= @feedbacks.size %>
  
  var t = setTimeout("getFeedbacks()", 5000);

</script>